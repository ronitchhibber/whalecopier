# Database
DB_PASSWORD=changeme123
DATABASE_URL=postgresql://trader:changeme123@localhost:5432/polymarket_trader

# Redis
REDIS_URL=redis://localhost:6379/0

# Kafka
KAFKA_BROKERS=localhost:9092

# RabbitMQ
RABBITMQ_PASSWORD=changeme123
RABBITMQ_URL=amqp://trader:changeme123@localhost:5672

# Polymarket
# Note: Polymarket CLOB API doesn't use API keys - authentication is via EIP-712 signatures
POLYMARKET_CLOB_HOST=https://clob.polymarket.com

# Polygon/Ethereum
# ⚠️ CRITICAL: For production, migrate to AWS KMS (see SETUP_GUIDE.md)
PRIVATE_KEY=your_private_key_here  # 0x-prefixed, 66 chars
L2_PRIVATE_KEY=your_private_key_here  # Alias for py-clob-client
WALLET_ADDRESS=0xyour_address_here
POLYGON_RPC=https://polygon-rpc.com
POLYGON_RPC_URL=https://polygon-rpc.com
CHAIN_ID=137

# AWS (for KMS, RDS, Secrets Manager)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=AKIA...
AWS_SECRET_ACCESS_KEY=...
AWS_KMS_KEY_ID=  # arn:aws:kms:region:account:key/...
AWS_SECRETS_NAME=polymarket-bot-config

# Third-Party APIs (for whale intelligence)
ARKHAM_API_KEY=
NANSEN_API_KEY=
POLYGONSCAN_API_KEY=

# Trading Configuration
INITIAL_CAPITAL=10000.0
MAX_POSITION_SIZE=1000.0
MAX_TOTAL_EXPOSURE=10000.0
MAX_DAILY_LOSS=500.0
MAX_DRAWDOWN_PCT=20.0
KELLY_FRACTION=0.25

# Risk Limits
STOP_LOSS_PCT=0.15
TAKE_PROFIT_PCT=0.30
MAX_WHALE_ALLOCATION=0.30
MIN_MARKET_LIQUIDITY=50000.0
MAX_BID_ASK_SPREAD=0.03

# Whale Selection
MIN_WHALE_WIN_RATE=0.65
MIN_WHALE_SHARPE=1.0
MIN_WHALE_TRADES=20
WHALE_SCORE_THRESHOLD=70

# Monitoring & Observability
GRAFANA_PASSWORD=admin123
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
SENTRY_DSN=your_sentry_dsn_here
OTEL_SERVICE_NAME=polymarket-whale-copier
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
PAGERDUTY_INTEGRATION_KEY=

# Geo-Compliance (CRITICAL for Polymarket ToS)
GEOIP_DATABASE_PATH=/usr/share/GeoIP/GeoLite2-Country.mmdb
RESTRICTED_COUNTRIES=US,GB,FR,SG,AU
GEO_AUDIT_LOG_PATH=logs/geo_compliance_audit.log

# Edge Decay Detection (CUSUM)
CUSUM_THRESHOLD=5.0
CUSUM_DRIFT=0.5
CUSUM_LOOKBACK_DAYS=30
AUTO_CULL_DRAWDOWN_PCT=0.25
AUTO_PAUSE_SHARPE_DROP=1.0

# Execution Settings
DEFAULT_COPY_MODE=delayed  # immediate, delayed, partial, conditional
MAX_SLIPPAGE_PCT=0.005  # 0.5% max slippage
DEFAULT_ORDER_TYPE=FAK  # FAK, FOK, GTC
ORDER_EXPIRATION_SECONDS=300
MAX_ORDERS_PER_MINUTE=10

# Market Filters
MIN_MARKET_VOLUME_24H=50000.0
MIN_TIME_TO_RESOLUTION_HOURS=24
PRE_RESOLUTION_EXIT_HOURS=3

# Backtesting & Auto-Optimization
ENABLE_AUTO_OPTIMIZATION=false
OPTIMIZATION_INTERVAL_HOURS=168
OPTIMIZATION_SAFETY_THRESHOLD=0.20
BACKTEST_START_DATE=2024-01-01
BACKTEST_END_DATE=2024-12-31
BACKTEST_INITIAL_CAPITAL=100000.0
BACKTEST_SIMULATIONS=1000

# Application
ENVIRONMENT=development
LOG_LEVEL=INFO
LOG_FORMAT=json  # json or text
LOG_FILE=logs/trading.log
DEBUG=true
DRY_RUN=false
PAPER_TRADING=true
PAPER_TRADING_INITIAL_BALANCE=10000.0

# Security
SECRET_KEY=generate_a_secure_random_string_here
SESSION_LIFETIME_HOURS=24
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60

# Performance
MAX_WORKERS=4
PYTHONUNBUFFERED=1
TZ=UTC
